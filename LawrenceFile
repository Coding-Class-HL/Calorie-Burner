#include <iostream>
#include <fstream>
#include <string>

using namespace std;

void CreateUser();

int main()
{
    char CHOICE[10];
    string line;
    while (CHOICE[0] != 'e') {
        ifstream in ("Menu.txt");
        while (getline(in, line))
            cout << line << endl;
        cin >> CHOICE; 
        
        switch (CHOICE[0]) {
            case 'c' : CHOICE[0] = 'e'; CreateUser(); break;
            case 'o' : CHOICE[0] = 'e'; cout << "open user\n";/*FindUser()*/break;
            case 'e' : cout << "\n\t<Exiting program, have a nice day!>"; break;
            default : "\n\tInvalid Input!"; 
        }
    }
    //code for next menu
    //this one asks for how many 
    return 0;
}

void CreateUser() {
    int calories;
    string userName, readFile;
    
    ofstream ofile;
    ofile.open("CalorieCalc.txt");

    cout << "Enter username: ";
    cin >> userName;

    for (int i = 0; i < userName.size(); i++) 
        userName[i] = toupper(userName[i]);
            
    cout << "Enter calorie intake: ";
    cin >> calories;

    cout << "Writing data to files..." << endl;
    ofile << userName << endl;
    ofile << calories << endl;
    ofile.close();

    ifstream ifile;
    ifile.open("CalorieCalc.txt");
    cout << "Reading user data..." << endl;

    ifile >> readFile;
    cout << readFile << endl;

    ifile.close();
}
